<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewBag.Title</title>

    <!-- Bootstrap/JQuery-->
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/AJAX.js"></script>
    <!-- Plugin JavaScript -->
    <script src="~/Scripts/jquery.easing.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.js"></script>
    <!-- Custom JavaScript for this theme -->
    <script src="~/Scripts/clock.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.css" />
    <!-- Custom styles for this template -->
    <link href="~/Content/StyleSheet.css" rel="stylesheet" />
</head>

<body id="page-top">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand" href="/home">Home</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/home/SeeAllQueries">See All Time Queries</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="#contact">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="row">
        <header id="myheader" class="col-lg-12 bg-primary text-white"> 
            <div class="col-lg-12" id="header-background">
                <div class="container text-center col-lg-8">
                    <h1 id="myheadertext" >Welcome To Clockwork API Project @ViewData["Version"] on @ViewData["Runtime"]!</h1>
                    <p id="headersubtext"class="lead" >A .NET Framework 4.5 MVC Project and .NET Core 2.0 API</p>
                </div>
            </div>
        </header>
    </div>

    <div class="row">
        <div id="window-container" class="container-fluid col-lg-12">
            <div id="body-container" class="container col-lg-10">
                <div class="row">
                </div>
                <div id="canvas-box"class="row">
                    <canvas id="canvas" width="200" height="200" class="mx-auto"></canvas>
                </div>
                    <div class="col-lg-12 mx-auto">
                        @RenderBody()
                    </div>
             
                <section id="contact">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-8 mx-auto">
                                <h2>Contact us</h2>
                                <p class="lead">This page was built by Nick Doran, who can be reached at <a>chasedoran6@gmail.com</a></p>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>

    <footer class="py-4 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Nick Doran, 2019</p>
        </div>
    </footer>
   
    <script>
        var canvas = document.getElementById("canvas");
        var ctx = canvas.getContext("2d");
        var radius = canvas.height / 2;
        ctx.translate(radius, radius);
        radius = radius * 0.90
        drawClock();
        setInterval(drawClock, 1000);


    </script>
</body>

</html>

